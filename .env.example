DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5433
DB_USER=task_user
DB_PASS=task_pass
DB_NAME=task_auth
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379
ENABLE_FINGERPRINT=true

# JWT settings
JWT_ACCESS_SECRET=dev_access_secret_change_me
JWT_REFRESH_SECRET=dev_refresh_secret_change_me
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=30d

# Mail settings
# MAIL_DRIVER can be: ethereal | smtp
MAIL_DRIVER=ethereal
MAIL_FROM="TaskAuth <no-reply@task-auth.local>"
# SMTP_* used when MAIL_DRIVER=smtp
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=
# SMTP_PASS=

# Email verification settings
EMAIL_VERIFY_TTL=24h
APP_URL=http://localhost:3000

